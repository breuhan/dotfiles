[user]
    name = Michael Contento
    email = michaelcontento@gmail.com
[alias]
    cm = commit --message
    cma = commit --all --message
    co = checkout
    logg = log --left-right --graph
    st = status --short --branch
    unstage = reset HEAD --
    who = !git shortlog --summary --email | sort -r
    lg = log --pretty=history --abbrev --date=relative --graph
    ff = pull --ff-only
[pretty]
    changelog = * %s
    history = %C(red)%h%C(reset) -%C(yellow)%d%C(reset) %s %C(green)(%cr) %C(bold blue)<%an>%C(reset)
[color]
    branch = auto
    diff = auto
    interactive = auto
    status = auto
[chiefs]
    ignore = (master|stable|production|stage|develop)
    reference = develop
[branch]
    autosetupmerge = true
    autosetuprebase = always
[merge]
    stat = true
    tool = vimdiff
[core]
    excludesfile = ~/.gitexcludes
    autocrlf = false
    whitespace = tab-in-indent,trailing-space,cr-at-eol
    editor = /usr/bin/vim
[url "git@github.com:"]
    insteadOf = "gh:"
    pushInsteadOf = "github:"
    pushInsteadOf = "git://github.com/"
[url "git://github.com/"]
    insteadOf = "github:"
[url "git@gist.github.com:"]
    insteadOf = "gst:"
    pushInsteadOf = "gist:"
    pushInsteadOf = "git://gist.github.com/"
[url "git://gist.github.com/"]
    insteadOf = "gist:"
[url "git@heroku.com:"]
    insteadOf = "heroku:"
[gitflow "branch"]
    master = master
    develop = develop
[gitflow "prefix"]
    feature = feature/
    release = release/
    hotfix = hotfix/
    support = support/
    versiontag = RELEASE_
[github]
    token =
    user = michaelcontento
[filter "github_token"]
    clean = perl -pe \"s/^ *token ?=.*/    token =/i\"
[push]
    default = upstream
