[user]
    name = Michael Contento
    email = michaelcontento@gmail.com
[tig]
    show-refs = yes
    tab-size = 4
[alias]
    go = "!f(){ git checkout $(git branch -r | grep $1 | cut -d'/' -f2-); }; f"
    amend = commit --amend
    this = !git init && git add . && git commit -m \"initial commit\"
    rm-all  = !git ls-files -z --deleted | xargs -0 git rm
    ignore = !([ ! -e .gitignore ] && touch .gitignore) | echo $1 >> .gitignore
    grep = grep -Ii
    lasttag = describe --tags --abbrev=0

    # Show verbose output about tags, branches or remotes
    tags = tag -l
    branches = branch -a
    remotes = remote -v

    # log
    l = log --pretty=format:"%C(yellow)%h\\ %C(green)%ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short --graph
    ll = !git l --patch

    # reset commands
    r = reset
    r1 = reset HEAD^
    r2 = reset HEAD^^
    rh = reset --hard
    rh1 = reset HEAD^ --hard
    rh2 = reset HEAD^^ --hard

    # stash
    sl = stash list
    sa = stash apply
    ss = stash save

    # merge
    ours = "!f() { git co --ours $@ && git add $@; }; f"
    theirs = "!f() { git co --theirs $@ && git add $@; }; f"
[pretty]
    changelog = * %s
    history = %C(red)%h%C(reset) -%C(yellow)%d%C(reset) %s %C(green)(%cr) %C(bold blue)<%an>%C(reset)
[color]
    branch = auto
    diff = auto
    interactive = auto
    status = auto
    ui = 1
[chiefs]
    ignore = (master|stable|production|stage|develop)
    reference = develop
[branch]
    autosetupmerge = true
    autosetuprebase = always
[rebase]
    stat = true
[merge]
    tool = vimdiff
    log = true
[core]
    pager = less -R --quit-if-one-screen
    excludesfile = ~/.gitexcludes
    attributesfile = ~/.gitattributes
    autocrlf = false
    whitespace = tab-in-indent,trailing-space,cr-at-eol
    editor = /usr/bin/vim
    logallrefupdates = true
[url "git@github.com:"]
    insteadOf = "gh:"
    pushInsteadOf = "github:"
    pushInsteadOf = "git://github.com/"
[url "git://github.com/"]
    insteadOf = "github:"
[url "git@gist.github.com:"]
    insteadOf = "gst:"
    pushInsteadOf = "gist:"
    pushInsteadOf = "git://gist.github.com/"
[url "git://gist.github.com/"]
    insteadOf = "gist:"
[url "git@heroku.com:"]
    insteadOf = "heroku:"
[gitflow "branch"]
    master = master
    develop = develop
[gitflow "prefix"]
    feature = feature/
    release = release/
    hotfix = hotfix/
    support = support/
    versiontag = RELEASE_
[github]
    token =
    user = michaelcontento
    password = !security 2>&1 >/dev/null find-generic-password -gs github.password | ruby -e 'print $1 if STDIN.gets =~ /^password: \\\"(.*)\\\"$/'
[filter "github_token"]
    clean = perl -pe \"s/^ *token ?=.*/    token =/i\"
[push]
    default = upstream
[help]
    autocorrect = 1
[rerere]
    enabled = 1
[gist]
    private = yes
    browse = yes
[pull]
	rebase = true
