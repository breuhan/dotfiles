[core]
	pager = less -R
    excludesfile = ~/.gitexcludes
    attributesfile = ~/.gitattributes
    autocrlf = false
    whitespace = tab-in-indent,trailing-space,cr-at-eol,trailing-space,space-before-tab,cr-at-eol
    editor = vim
    logallrefupdates = true
[user]
	name = cylonbrain
	email = cylonbrain@gmail.com
[tig]
    show-refs = yes
    tab-size = 4
[alias]
    # Show verbose output about tags, branches or remotes
    tags = tag -l
    branches = branch -a
    remotes = remote -v
	wdiff = diff --color-words
[pretty]
    changelog = * %s
    history = %C(yellow)%h %C(green)%ad%Cred%d %Creset%s%Cblue [%cn]
[color]
    branch = auto
    diff = auto
    interactive = auto
    status = auto
    ui = 1
[branch]
    autosetupmerge = true
    autosetuprebase = always
[rebase]
    stat = true
[merge]
    tool = vimdiff
    log = true
[push]
    default = upstream
[help]
    autocorrect = 1
[pull]
	rebase = true
[diff]
	algorithm = patience
