[user]
    name = Michael Contento
    email = michaelcontento@gmail.com
[tig]
    show-refs = yes
    tab-size = 4
[alias]
    # grep in binary files is .. well .. who does this?
    grep = grep -I

    # Show verbose output about tags, branches or remotes
    tags = tag -l
    branches = branch -a
    remotes = remote -v
[pretty]
    changelog = * %s
    history = %C(yellow)%h %C(green)%ad%Cred%d %Creset%s%Cblue [%cn]
[color]
    branch = auto
    diff = auto
    interactive = auto
    status = auto
    ui = 1
[branch]
    autosetupmerge = true
    autosetuprebase = always
[rebase]
    stat = true
[merge]
    tool = vimdiff
    log = true
[core]
    pager = less -R --quit-if-one-screen
    excludesfile = ~/.gitexcludes
    attributesfile = ~/.gitattributes
    autocrlf = false
    whitespace = tab-in-indent,trailing-space,cr-at-eol
    editor = /usr/bin/vim
    logallrefupdates = true
[url "git@github.com:"]
    insteadOf = "gh:"
    pushInsteadOf = "github:"
    pushInsteadOf = "git://github.com/"
[url "git://github.com/"]
    insteadOf = "github:"
[url "git@gist.github.com:"]
    insteadOf = "gst:"
    pushInsteadOf = "gist:"
    pushInsteadOf = "git://gist.github.com/"
[url "git://gist.github.com/"]
    insteadOf = "gist:"
[url "git@heroku.com:"]
    insteadOf = "heroku:"
[gitflow "branch"]
    master = master
    develop = develop
[gitflow "prefix"]
    feature = feature/
    release = release/
    hotfix = hotfix/
    support = support/
    versiontag = RELEASE_
[github]
    token =
    user = michaelcontento
    password = !security 2>&1 >/dev/null find-generic-password -gs github.password | ruby -e 'print $1 if STDIN.gets =~ /^password: \\\"(.*)\\\"$/'
[filter "github_token"]
    clean = perl -pe \"s/^ *token ?=.*/    token =/i\"
[push]
    default = upstream
[help]
    autocorrect = 1
[rerere]
    enabled = 1
[gist]
    private = yes
    browse = yes
[pull]
	rebase = true
[diff]
	algorithm = patience
