# EC2 defaults
Host *.compute.amazonaws.com
    User ubuntu
    IdentityFile ~/.ec2/ec2-keypair

# Adcloud Github
Host github.adcloud.com
    Port 2222
    User git

# Masternode
Host mn
    User michael
    HostName masternode.dyndns.info

# LXC guests
Host 192.168.42.*
    User root

# Global defaults
Host *
    Compression yes
    ForwardAgent yes

    # NOTE: You will need to specify -o ControlMaster=no when using
    #       ssh to do  tunneling otherwise multiple tunnels to a
    #       particular host will not work.
    ControlMaster auto
    ControlPath /tmp/%r@%h:%p
    ControlPersist 120
